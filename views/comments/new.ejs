<% include ../partials/header %>

  <div class='row'>
    <h1 style='text-align: center'>Add new comment to <%= report.name %> </h1>
    <div style='width: 40%; margin: 35px auto;'>
      <form action='/reports/<%= report._id %>/comments' method='POST'>
        <div class='form-group'>
          <input class='form-control' type="text" name="comment[text]" placeholder="text">
        </div>
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block'>Submit</button>
        </div>
      </form>
      <a href="/reports">Back</a>
    </div>
  </div>


<% include ../partials/footer %>