<% include ../partials/header %>
<div class='container'>
  <div class='row'>
    <div class ='col-md-3'>
      <p class='lead'>INC/REP</p>
      <div class='list-group'>
        <li class='list-group-item active'>Info 1</li>
        <li class='list-group-item'>Info 2</li>
        <li class='list-group-item'>Info 3</li>
      </div>
    </div>
    <div class='col-md-9'>
      <div class='thumbnail'>
        <img class='image-responsive' src=' <%= report.image %>' >
         <div class='caption-full'>
          <h4><a> <%= report.name %> </a></h4>
          <p> <%= report.description %> </p>
          <p>
            <em>Submited By: <%= report.author.username %> <em> 
          </p>
         </div>
      </div>
      <div class='well'>
        <div class='text-right'>
          <a class='btn btn-success' href='/reports/<%= report._id%>/comments/new'>Add New Comment</a>
        </div>
        <hr>
          <% report.comments.forEach((comment) => { %>
            <div class='row'>
              <div class='col-md-12'>
                <strong><%= comment.author.username %></strong>
                <span class='pull-right'>10 days ago</span>
                <p>
                  <%= comment.text %>
                </p>
              </div>
            </div>
          <% }) %>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>