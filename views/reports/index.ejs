<% include ../partials/header %>
<div class='container'>
  <header class='jumbotron'>
  <div class='container'>
    <h1>Welcome to IncRep</h1>
    <p>Protect your customer and your venue with Incident Report</p>
    <p>
      <a class='btn btn-primary btn-lrg' href="/reports/new">Add New Incident Report</a>
    </p>
  </div>
  </header>
  <div class="row text-center" style='display:flex; flex-wrap: wrap;'>
    <% reports.forEach(function(report){ %>
      <div class='col-md-3 col-sm-6'>
        <div class='thumbnail'>
          <img src="<%= report.image %>">
          <div class='caption'>
            <h4>  <%= report.name %> </h4>
          </div>
            <p>
              <a href='/reports/<%= report._id %>' class='btn btn-primary'>More Info</a>
            </p>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<% include ../partials/footer %>