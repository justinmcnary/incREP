<% include ../partials/header %>

  <div class='row'>
    <h1 style='text-align: center'>Create a new Incident Report</h1>
    <div style='width: 40%; margin: 35px auto;'>
      <form action="/reports" method="POST">
        <div class='form-group'>
          <label for='name'>Name</label>
          <input class='form-control' type="text" name="name" placeholder="name">
        </div>

        <div class='form-group'>
          <label for='image'>Image Url</label>
          <input class='form-control' type="text" name="image" placeholder="image url">
        </div>
        
         <div class='form-group'>
          <label for='location'>Location</label>
          <input class='form-control 'type="text" name='location' id='location' placeholder='The Double Deuce, CA'>
        </div>
        <fieldset class="form-group">
          <legend>Severity of Incident</legend>
          <div class="form-check">
            <label class="form-check-label">
            <input type="radio" class="form-check-input" name="severity" id="severity-low" value="1" checked>
            Low
            </label>
          </div>
          <div class="form-check">
            <label class="form-check-label">
            <input type="radio" class="form-check-input" name="severity" id="severity-moderate" value="2">
            Moderate
          </label>
          </div>
        <div class="form-check">
          <label class="form-check-label">
          <input type="radio" class="form-check-input" name="severity" id="severity-critical" value="3">
          Critical
          </label>
        </div>
        </fieldset>


        <div class='form-group'>
          <label for='height'>Height</label>
          <input class='form-control' type="text" name="height" placeholder="height">
        </div>
        <div class='form-group'>
          <label for='weight'>Weight</label>
          <input class='form-control' type="text" name="weight" placeholder="weight">
        </div>
        <div class='form-group'>
          <label for='age'>Age</label>
          <input class='form-control' type="text" name="age" placeholder="age">
        </div>
        <div class='form-group'>
          <label for='sex'>Sex</label>
          <input class='form-control' type="text" name="sex" placeholder="sex">
        </div>
        <div class='form-group'>
          <label for='race'>Skin Color</label>
          <input class='form-control' type="text" name="race" placeholder="race">
        </div>
        <hr>
         <div class='form-group'>
         <label for='description'>Description</label>
         <textarea class='form-control' rows='5' name="description" placeholder='Incident Description: Please be as detailed as possible.'></textarea>
        </div>
        
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block'>Submit</button>
        </div>
      </form>
      <a href="/reports">Back</a>
    </div>
  </div>


<% include ../partials/footer %>
